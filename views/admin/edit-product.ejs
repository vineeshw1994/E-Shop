<%- include('../layouts.ejs')%>


<section>
    <div class="container mt-4 mb-5">
        <div class="row ">
             <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <% if (locals.msg) { %>
                  <div class="alert alert-success">
                    <strong><%= msg %> </strong>
                  </div>
                <% } %> 
                <p class="text-center text-success"><%= %></p>
                <p class="text-success text-center"></p>
               <form action="/admin/edit-product" method="post" enctype="multipart/form-data">

                <label for="username"></label>
                <input type="hidden" id="id" name="id" value="<%= productData._id %>" />
                 <label for="">Name</label>
                <input type="text" name="name" class="form-control" value="<%=productData.name%>">
                 <label for="">Category</label>
                 <input type="text" name="category" class="form-control" value="<%=productData.category%>">
                 <label for="">Price</label>
                <input type="number" name="price" class="form-control" value="<%=productData.price%>">
                 <label for="">Discription</label>
                <input type="text" name="discription" class="form-control" value="<%=productData.discription%>">
                 <label for="">Image</label>
                <input type="file" name="file" class="form-control" id="formFileMultiple" multiple value="<%=productData.image[0]%>">

                <button type="submit" class="btn btn-success mt-4">Submit</button>
               </form>
             </div>
        </div>
    </div>
</section>